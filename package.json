{
  "name": "smartpower",
  "version": "1.0.4",
  "author": "li888dong <498437323@qq.com>",
  "description": "易采电力数据管理系统",
  "license": "MIT",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node .electron-vue/build.js && electron-builder",
    "build:dir": "node .electron-vue/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
    "build:web": "cross-env BUILD_TARGET=web node .electron-vue/build.js",
    "dev": "node .electron-vue/dev-runner.js",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js",
    "postinstall": "",
    "publish": "build -p always"
  },
  "build": {
    "productName": "smartpower",
    "appId": "com.smartpower.app",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "artifactName":"${productName}-${os}-${version}.${ext}",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "publish":{
        "provider":"generic",
        "url":"http://192.168.2.2/release/${os}/latest",
        "channel":"latest"       
      }
    },
    "win": {
      "icon": "build/icons/logo.ico",
      "publish":{
        "provider":"generic",
        "url":"http://192.168.2.2/release/${os}/latest",
        "channel":"latest"       
      },
      "target":"nsis"
    },
    "linux": {
      "icon": "build/icons"
    },
    "nsis": {
      "oneClick": false,
      "installerLanguages":"zh-CN",
      "language":"2052",
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "axios": "^0.16.1",
    "calendar-plugin": "^1.0.1",
    "echarts": "^3.8.4",
    "electron-updater": "^2.17.6",
    "iview": "^2.6.0",
    "mockjs": "^1.0.1-beta3",
    "raphael": "^2.2.7",
    "vue": "^2.3.3",
    "vue-electron": "^1.0.6",
    "vue-kindeditor": "^0.2.1",
    "vue-router": "^2.5.3",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "cfonts": "^1.1.3",
    "chalk": "^2.1.0",
    "copy-webpack-plugin": "^4.0.1",
    "countup": "^1.8.2",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.4",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^1.7.5",
    "electron-builder": "^19.19.1",
    "electron-debug": "^1.4.0",
    "electron-devtools-installer": "^2.2.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "iview-area": "^1.5.12",
    "js-cookie": "^2.2.0",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "style-loader": "^0.18.2",
    "tinymce": "^4.7.3",
    "url-loader": "^0.5.9",
    "vue-count-to": "^1.0.10",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^13.0.5",
    "vue-style-loader": "^3.0.1",
    "vue-template-compiler": "^2.4.2",
    "webpack": "^3.5.2",
    "webpack-dev-server": "^2.7.1",
    "webpack-hot-middleware": "^2.18.2"
  }
}
